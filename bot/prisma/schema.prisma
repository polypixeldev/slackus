generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model App {
  id            String  @id @default(cuid())
  user          String
  bot           String
  command       String
  interval      Int
  conversations String
  checks        Check[]
}

model Check {
  id        String   @id @default(cuid())
  app       App      @relation(fields: [appId], references: [id])
  appId     String
  status    String   @default("up")
  timestamp DateTime
}
